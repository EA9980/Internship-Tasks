# Menu Driven Program

while True:
    print("\nMenu")
    print("1. Check Even or Odd")
    print("2. Check Positive or Negative")
    print("3. Exit")

    choice = int(input("Enter choice: "))

    if choice == 1:
        num = int(input("Enter number: "))
        if num % 2 == 0:
            print("Even number")
        else:
            print("Odd number")

    elif choice == 2:
        num = int(input("Enter number: "))
        if num > 0:
            print("Positive number")
        elif num < 0:
            print("Negative number")
        else:
            print("Zero")

    elif choice == 3:
        break

    else:
        print("Invalid choice")

# Create dictionary
student = {
    "name": "Eranna",
    "age": 21,
    "course": "MCA",
    "college": "KLS Gogte Institute of Technology"
}

print("Student Details:")
print(student)
# Add new element
student["city"] = "Hospet"
print("After Adding City:", student)

# Update element
student["age"] = 22
print("After Updating Age:", student)

# Delete element
del student["course"]
print("After Deleting Course:", student)

#word frequency
sentence = "python is easy and python is powerful"

words = sentence.split()
word_count = {}

for word in words:
    if word in word_count:
        word_count[word] += 1
    else:
        word_count[word] = 1

print("Word Frequency:")
print(word_count)

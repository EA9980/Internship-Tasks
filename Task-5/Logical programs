while True:
    print("\n--- LOGICAL PROGRAM MENU ---")
    print("1. Check Prime Number")
    print("2. Find Factorial")
    print("3. Check Palindrome")
    print("4. Find Largest of Three Numbers")
    print("5. Check Armstrong Number")
    print("6. Exit")

    try:
        choice = int(input("Enter your choice: "))
    except ValueError:
        print("Please enter numbers only (1 to 6)")
        continue

    # 1. Prime Number
    if choice == 1:
        num = int(input("Enter a number: "))
        if num <= 1:
            print("Not a Prime Number")
        else:
            for i in range(2, int(num ** 0.5) + 1):
                if num % i == 0:
                    print("Not a Prime Number")
                    break
            else:
                print("Prime Number")

    # 2. Factorial
    elif choice == 2:
        num = int(input("Enter a number: "))
        fact = 1
        for i in range(1, num + 1):
            fact *= i
        print("Factorial =", fact)

    # 3. Palindrome
    elif choice == 3:
        num = int(input("Enter a number: "))
        temp = num
        rev = 0
        while num > 0:
            rev = rev * 10 + num % 10
            num //= 10
        if temp == rev:
            print("Palindrome Number")
        else:
            print("Not a Palindrome")

    # 4. Largest of Three Numbers
    elif choice == 4:
        a = int(input("Enter first number: "))
        b = int(input("Enter second number: "))
        c = int(input("Enter third number: "))
        if a > b and a > c:
            print("Largest is", a)
        elif b > c:
            print("Largest is", b)
        else:
            print("Largest is", c)

    # 5. Armstrong Number
    elif choice == 5:
        num = int(input("Enter a number: "))
        temp = num
        total = 0
        digits = len(str(num))
        while num > 0:
            digit = num % 10
            total += digit ** digits
            num //= 10
        if temp == total:
            print("Armstrong Number")
        else:
            print("Not an Armstrong Number")

    # Exit
    elif choice == 6:
        print("Program Ended. Thank You!")
        break

    else:
        print("Invalid choice! Enter between 1 and 6")
